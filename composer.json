{
    "name": "zainpay/sdk",
    "description": "PHP SDK",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ahmard",
            "email": "ahmardy@outlook.com"
        },
        {
            "name": "nurayusuf",
            "email": "nurakilauren@gmail.com"
        },
        {
            "name": "Gidado",
            "email": "alaleeyuugidado@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0|^8.1|^8.2",
        "ext-json": "*",
        "guzzlehttp/guzzle": "^7.4"
    },
    "autoload": {
        "psr-4": {
            "Zainpay\\SDK\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Zainpay\\SDK\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "^1.5",
        "symfony/var-dumper": "^5.4",
        "fakerphp/faker": "^1.19",
        "pestphp/pest": "^1.21"
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
